{{#resume.basics}}
    <div class="grid-x">
        <div class="cell auto">
            <h1 class="resume-name">{{{ name }}}</h1>
        </div>

        <div id="contact" class="cell shrink">
            {{#if email}}<span class="email cell shrink"><a href="mailto:{{{ email }}}">{{ email }}</a></span>&nbsp;{{/if}}
            {{#if phone}}<span class="phone cell shrink">{{ phone }}</span>&nbsp;{{/if}}
            {{#if website}}<span class="website cell shrink"><a href="{{{ website }}}">{{ website }}</a></span>{{/if}}
        </div>
    </div>
    <hr>
	<section id="basics">
		{{#if summary}}
		<div class="summary">
			<p>{{summary}}</p>
		</div>
		{{/if}}
	</section>
{{/resume.basics}}
